<style>
  .page-hero {
    min-height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    position: relative;
    overflow: hidden;
    padding: 4rem 2rem;
  }

  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('/images/mightyimages/locations.JPG') center/cover no-repeat;
    z-index: 0;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.85) 0%, rgba(0, 0, 0, 0.75) 100%);
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-badge {
    display: inline-block;
    color: var(--yellow);
    padding: 0.5rem 1.5rem;
    border-radius: 0;
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    border: 2px solid var(--yellow);
    margin-bottom: 2rem;
    clip-path: polygon(8px 0, 100% 0, calc(100% - 8px) 100%, 0 100%);
  }

  .page-hero h1 {
    font-size: clamp(3rem, 6vw, 5rem);
    font-weight: 900;
    color: var(--white);
    margin-bottom: 1.5rem;
    letter-spacing: -2px;
    line-height: 1.1;
  }

  .page-hero h1 .highlight {
    color: var(--yellow);
  }

  .page-hero p {
    font-size: clamp(1.1rem, 2vw, 1.3rem);
    color: var(--gray-300);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.8;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 3rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    color: var(--black);
    margin-bottom: 1rem;
    letter-spacing: -1px;
  }

  .section-header p {
    font-size: 1.2rem;
    color: var(--gray-600);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.8;
  }

  .locations-intro {
    padding: 8rem 0 4rem;
  }

  .locations-grid-section {
    padding: 4rem 0;
    background: var(--gray-50);
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 900;
    color: var(--black);
    margin-bottom: 3rem;
    text-align: center;
    letter-spacing: -1px;
  }

  .locations-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .location-card {
    background: var(--white);
    padding: 2.5rem 2rem;
    border-radius: 0;
    border: 3px solid var(--black);
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    position: relative;
    clip-path: polygon(0 0, calc(100% - 20px) 0, 100% 20px, 100% 100%, 0 100%);
  }

  .location-link {
    text-decoration: none;
    cursor: pointer;
    display: block;
  }

  .location-link h3,
  .location-link p {
    color: inherit;
  }

  .location-card::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 20px;
    height: 20px;
    background: var(--yellow);
    clip-path: polygon(100% 0, 100% 100%, 0 0);
  }

  .location-card:hover {
    border-color: var(--yellow);
    transform: translate(-4px, -4px);
    box-shadow: 8px 8px 0 rgba(246, 245, 16, 0.9), 0 0 30px rgba(246, 245, 16, 0.4);
  }

  .location-icon {
    position: absolute;
    top: 1.5rem;
    right: 2rem;
    background: var(--black);
    color: var(--yellow);
    border: 2px solid var(--yellow);
    width: 3rem;
    height: 3rem;
    border-radius: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 900;
    font-size: 1.1rem;
    clip-path: polygon(0 0, calc(100% - 6px) 0, 100% 6px, 100% 100%, 0 100%);
    z-index: 1;
  }

  .location-card h3 {
    font-size: 1.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    color: var(--black);
  }

  .location-card p {
    line-height: 1.8;
    color: var(--gray-600);
  }

  .coverage-section {
    padding: 8rem 0;
  }

  .coverage-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .coverage-item {
    background: var(--black);
    color: var(--white);
    padding: 3rem 2rem;
    border-radius: 0;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    border: 3px solid var(--gray-800);
    position: relative;
    overflow: hidden;
  }

  .coverage-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 5px;
    height: 100%;
    background: var(--yellow);
    transform: scaleY(0);
    transform-origin: top;
    transition: transform 0.4s ease;
  }

  .coverage-item:hover {
    border-color: var(--yellow);
    transform: translateX(8px);
    box-shadow: -8px 8px 0 rgba(246, 245, 16, 0.9), 0 0 30px rgba(246, 245, 16, 0.3);
  }

  .coverage-item:hover::before {
    transform: scaleY(1);
  }

  .coverage-number {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    background: var(--yellow);
    color: var(--black);
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 900;
    font-size: 1rem;
    clip-path: polygon(0 0, calc(100% - 6px) 0, 100% 6px, 100% 100%, 0 100%);
  }

  .coverage-item h3 {
    font-size: 1.8rem;
    font-weight: 800;
    margin-bottom: 0.75rem;
    color: var(--white);
  }

  .coverage-item p {
    font-size: 1.05rem;
    color: var(--gray-400);
    line-height: 1.6;
  }

  .cta-section {
    background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
    padding: 8rem 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 50% 50%, rgba(246, 245, 16, 0.1) 0%, transparent 60%);
  }

  .cta-content {
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
  }

  .cta-section h2 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    color: var(--white);
    margin-bottom: 1rem;
    letter-spacing: -1px;
  }

  .cta-section p {
    font-size: 1.3rem;
    color: var(--gray-300);
    margin-bottom: 3rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1.25rem 2.5rem;
    font-size: 1rem;
    font-weight: 700;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .btn-primary {
    background: var(--yellow);
    color: var(--black);
    border-color: var(--yellow);
    box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.2);
    clip-path: polygon(12px 0, 100% 0, calc(100% - 12px) 100%, 0 100%);
  }

  .btn-primary:hover {
    background: transparent;
    color: var(--yellow);
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 rgba(246, 245, 16, 0.7), 0 0 25px rgba(246, 245, 16, 0.5);
  }

  .btn-secondary {
    background: transparent;
    color: var(--white);
    border-color: var(--white);
    box-shadow: 4px 4px 0 rgba(255, 255, 255, 0.1);
    clip-path: polygon(12px 0, 100% 0, calc(100% - 12px) 100%, 0 100%);
  }

  .btn-secondary:hover {
    background: var(--white);
    color: var(--black);
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 rgba(255, 255, 255, 0.3);
  }

  .btn-large {
    padding: 1.5rem 3rem;
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    .page-hero {
      min-height: auto;
      padding: 4rem 1rem;
    }

    .hero-content {
      padding: 3rem 1rem;
    }

    .container {
      padding: 0 1.5rem;
    }

    .locations-intro,
    .coverage-section {
      padding: 4rem 0;
    }

    .locations-grid-section {
      padding: 3rem 0;
    }

    .locations-grid,
    .coverage-features {
      grid-template-columns: 1fr;
    }

    .cta-section {
      padding: 4rem 1rem;
    }
  }
</style>
