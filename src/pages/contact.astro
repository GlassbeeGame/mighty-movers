---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact" description="Get in touch with Mighty Movers for a free moving quote. Call us at (619) 555-MOVE or fill out our contact form.">
  <section class="page-hero">
    <div class="hero-background"></div>
    <div class="hero-content">
      <div class="hero-badge">Contact Us</div>
      <h1>Let's Get <span class="highlight">Moving</span></h1>
      <p>Get your free quote today and experience the Mighty Movers difference</p>
    </div>
  </section>

  <section class="contact-section">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-info">
          <h2>Get In Touch</h2>
          <p>Ready to make your move? Contact us today for a free, no-obligation quote. Our friendly team is here to answer your questions and help plan your perfect move.</p>

          <div class="contact-methods">
            <div class="contact-method">
              <h3>üìû Phone</h3>
              <p><a href="tel:6195556683">(619) 555-MOVE</a></p>
              <p class="subtitle">Mon-Sat: 7am - 7pm</p>
            </div>

            <div class="contact-method">
              <h3>‚úâÔ∏è Email</h3>
              <p><a href="mailto:info@mightymovers.com">info@mightymovers.com</a></p>
              <p class="subtitle">We respond within 24 hours</p>
            </div>

            <div class="contact-method">
              <h3>üìç Office</h3>
              <p>123 Moving Way<br/>San Diego, CA 92101</p>
              <p class="subtitle">By appointment only</p>
            </div>
          </div>

          <div class="business-hours">
            <h3>Business Hours</h3>
            <ul>
              <li><strong>Monday - Friday:</strong> 7:00 AM - 7:00 PM</li>
              <li><strong>Saturday:</strong> 8:00 AM - 5:00 PM</li>
              <li><strong>Sunday:</strong> Closed</li>
            </ul>
          </div>
        </div>

        <div class="contact-form-container">
          <h2>Request a Free Quote</h2>
          <form class="contact-form" id="contactForm">
            <div class="form-group">
              <label for="name">Full Name *</label>
              <input type="text" id="name" name="name" required />
            </div>

            <div class="form-group">
              <label for="email">Email Address *</label>
              <input type="email" id="email" name="email" required />
            </div>

            <div class="form-group">
              <label for="phone">Phone Number *</label>
              <input type="tel" id="phone" name="phone" required />
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="moveFrom">Moving From *</label>
                <input type="text" id="moveFrom" name="moveFrom" placeholder="City or ZIP" required />
              </div>

              <div class="form-group">
                <label for="moveTo">Moving To *</label>
                <input type="text" id="moveTo" name="moveTo" placeholder="City or ZIP" required />
              </div>
            </div>

            <div class="form-group">
              <label for="moveDate">Preferred Move Date</label>
              <input type="date" id="moveDate" name="moveDate" />
            </div>

            <div class="form-group">
              <label for="moveType">Type of Move</label>
              <select id="moveType" name="moveType">
                <option value="">Select a service</option>
                <option value="residential">Residential</option>
                <option value="commercial">Commercial</option>
                <option value="packing">Packing Services</option>
                <option value="storage">Storage</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div class="form-group">
              <label for="message">Additional Details</label>
              <textarea id="message" name="message" rows="5" placeholder="Tell us about your move..."></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Get Free Quote</button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="cta-content">
      <h2>Need Immediate Assistance?</h2>
      <p>For urgent moving needs or last-minute changes, call us directly at (619) 555-MOVE</p>
      <div class="cta-buttons">
        <a href="tel:6195556683" class="btn btn-primary btn-large">Call Now</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-hero {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
    overflow: hidden;
    padding: 2rem;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 30% 50%, rgba(246, 245, 16, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 70%, rgba(246, 245, 16, 0.08) 0%, transparent 50%);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    text-align: center;
    padding: 4rem 2rem;
  }

  .hero-badge {
    display: inline-block;
    background: var(--yellow);
    color: var(--black);
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 2rem;
  }

  .page-hero h1 {
    font-size: clamp(3rem, 6vw, 5rem);
    font-weight: 900;
    color: var(--white);
    margin-bottom: 1.5rem;
    letter-spacing: -2px;
    line-height: 1.1;
  }

  .page-hero h1 .highlight {
    color: var(--yellow);
  }

  .page-hero p {
    font-size: clamp(1.1rem, 2vw, 1.3rem);
    color: var(--gray-300);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.8;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 3rem;
  }

  .contact-section {
    padding: 8rem 0;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }

  .contact-info h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 900;
    color: var(--black);
    margin-bottom: 1.5rem;
    letter-spacing: -1px;
  }

  .contact-info > p {
    font-size: 1.15rem;
    line-height: 1.8;
    margin-bottom: 3rem;
    color: var(--gray-600);
  }

  .contact-methods {
    margin-bottom: 3rem;
  }

  .contact-method {
    margin-bottom: 2rem;
    padding: 2rem;
    background: var(--black);
    color: var(--white);
    border-radius: 12px;
    border: 2px solid var(--black);
    transition: all 0.3s ease;
  }

  .contact-method:hover {
    border-color: var(--yellow);
    transform: translateX(5px);
  }

  .contact-method h3 {
    font-size: 1.4rem;
    font-weight: 800;
    margin-bottom: 0.75rem;
    color: var(--white);
  }

  .contact-method p {
    margin-bottom: 0.5rem;
    color: var(--gray-300);
  }

  .contact-method a {
    color: var(--yellow);
    text-decoration: none;
    font-weight: 700;
    transition: color 0.3s ease;
  }

  .contact-method a:hover {
    color: var(--white);
  }

  .contact-method .subtitle {
    font-size: 0.9rem;
    color: var(--gray-400);
  }

  .business-hours {
    padding: 2rem;
    background: var(--gray-50);
    border-radius: 12px;
    border: 2px solid var(--gray-200);
  }

  .business-hours h3 {
    font-size: 1.4rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    color: var(--black);
  }

  .business-hours ul {
    list-style: none;
  }

  .business-hours ul li {
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--gray-300);
    color: var(--gray-700);
  }

  .business-hours ul li:last-child {
    border-bottom: none;
  }

  .business-hours ul li strong {
    color: var(--black);
  }

  .contact-form-container {
    background: var(--gray-50);
    padding: 3rem;
    border-radius: 12px;
    border: 2px solid var(--gray-200);
  }

  .contact-form-container h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 900;
    color: var(--black);
    margin-bottom: 2rem;
    letter-spacing: -1px;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    margin-bottom: 0.5rem;
    font-weight: 700;
    color: var(--black);
    font-size: 0.95rem;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 1rem;
    border: 2px solid var(--gray-300);
    border-radius: 8px;
    font-size: 1rem;
    font-family: inherit;
    transition: all 0.3s ease;
    background: var(--white);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--yellow);
    box-shadow: 0 0 0 3px rgba(246, 245, 16, 0.1);
  }

  .form-group textarea {
    resize: vertical;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1.25rem 2.5rem;
    font-size: 1rem;
    font-weight: 700;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    cursor: pointer;
    font-family: inherit;
  }

  .btn-primary {
    background: var(--yellow);
    color: var(--black);
    border-color: var(--yellow);
  }

  .btn-primary:hover {
    background: var(--black);
    color: var(--yellow);
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .btn-large {
    padding: 1.5rem 3rem;
    font-size: 1.1rem;
  }

  .cta-section {
    background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
    padding: 6rem 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 50% 50%, rgba(246, 245, 16, 0.1) 0%, transparent 60%);
  }

  .cta-content {
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
  }

  .cta-section h2 {
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: 900;
    color: var(--white);
    margin-bottom: 1rem;
    letter-spacing: -1px;
  }

  .cta-section p {
    font-size: 1.2rem;
    color: var(--gray-300);
    margin-bottom: 2.5rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 968px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .contact-form-container {
      padding: 2rem;
    }
  }

  @media (max-width: 768px) {
    .page-hero {
      min-height: auto;
      padding: 4rem 1rem;
    }

    .hero-content {
      padding: 3rem 1rem;
    }

    .container {
      padding: 0 1.5rem;
    }

    .contact-section {
      padding: 4rem 0;
    }

    .cta-section {
      padding: 4rem 1rem;
    }
  }
</style>

<script>
  const form = document.getElementById('contactForm') as HTMLFormElement | null;

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    alert('Thank you for your inquiry! We will contact you shortly.');
    form.reset();
  });
</script>
