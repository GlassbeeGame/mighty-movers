---
/**
 * SERVICE PAGE TEMPLATE
 *
 * This template creates a service detail page for Mighty Movers website.
 *
 * HOW TO USE:
 * 1. Import this template in your service page
 * 2. Pass all required props as defined in the Props interface below
 * 3. The template handles all HTML structure and styling
 * 4. You only need to provide the content data
 *
 * EXAMPLE:
 * ---
 * import ServiceTemplate from './_service-page-template.astro';
 * ---
 * <ServiceTemplate
 *   title="Local Moving Services"
 *   description="Professional local moving services..."
 *   heroBadge="Local Moving"
 *   heroTitle="Your Moving Title"
 *   ...all other props
 * />
 */
import Layout from '../../layouts/Layout.astro';

interface ProcessStep {
  step: number;
  title?: string;
  content: string;
}

interface ContentCard {
  title: string;
  content?: string;
  steps?: ProcessStep[];
  highlights?: string[];
  isProcess?: boolean;
}

interface FeatureCard {
  title: string;
  description: string;
}

interface LocationLink {
  href: string;
  title: string;
  description: string;
}

interface FAQItem {
  question: string;
  answer: string;
}

interface CTACard {
  title: string;
  description: string;
  buttonText: string;
  buttonHref: string;
  isDark?: boolean;
  isSecondary?: boolean;
}

interface InfoCard {
  title: string;
  items?: string[];
  content?: string;
}

interface TrustBadge {
  metric: string;
  label: string;
}

interface Props {
  // Page metadata
  title: string;
  description: string;
  noindex?: boolean;

  // Hero section
  heroBadge: string;
  heroTitle: string;
  heroDescription: string;

  // Section header
  sectionHeading: string;
  sectionDescription: string;

  // Content cards (first 2)
  contentCards: ContentCard[];

  // Features grid (4 features)
  features: FeatureCard[];

  // Locations links
  locationsHeading: string;
  locationLinks: LocationLink[];

  // FAQ
  faqHeading: string;
  faqs: FAQItem[];

  // Sidebar
  ctaCards: CTACard[];
  infoCards: InfoCard[];

  // Trust badges (optional)
  trustBadges?: TrustBadge[];

  // Bottom CTA
  bottomCTAHeading: string;
  bottomCTADescription: string;
  bottomCTAPrimaryText: string;
  bottomCTAPrimaryHref: string;
  bottomCTASecondaryText: string;
  bottomCTASecondaryHref: string;
}

const {
  title,
  description,
  noindex = true,
  heroBadge,
  heroTitle,
  heroDescription,
  sectionHeading,
  sectionDescription,
  contentCards,
  features,
  locationsHeading,
  locationLinks,
  faqHeading,
  faqs,
  ctaCards,
  infoCards,
  trustBadges,
  bottomCTAHeading,
  bottomCTADescription,
  bottomCTAPrimaryText,
  bottomCTAPrimaryHref,
  bottomCTASecondaryText,
  bottomCTASecondaryHref,
} = Astro.props;
---

<Layout title={title} description={description} noindex={noindex}>
  <section class="page-hero">
    <div class="hero-image"></div>
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <div class="hero-badge">{heroBadge}</div>
      <h1 set:html={heroTitle}></h1>
      <p>{heroDescription}</p>
    </div>
  </section>

  <section class="service-detail-section">
    <div class="service-decorative-elements">
      <div class="decorative-circle decorative-circle-1"></div>
      <div class="decorative-circle decorative-circle-2"></div>
      <div class="decorative-circle decorative-circle-3"></div>
    </div>
    <div class="container">
      <div class="content-wrapper">
        <div class="main-content">
          <div class="section-header">
            <h2>{sectionHeading}</h2>
            <p>{sectionDescription}</p>
          </div>

          {contentCards.slice(0, 2).map((card) => (
            <div class={`content-card ${card.isProcess ? 'process-card' : ''}`}>
              <h3>{card.title}</h3>
              {card.steps ? (
                <div class="process-steps">
                  {card.steps.map((step) => (
                    <div class="process-step">
                      <div class="step-number">{step.step}</div>
                      <div class="step-content">
                        {step.title && <h4 class="step-title">{step.title}</h4>}
                        <p>{step.content}</p>
                      </div>
                    </div>
                  ))}
                </div>
              ) : card.highlights ? (
                <div class="highlight-list">
                  {card.highlights.map((highlight) => (
                    <div class="highlight-item">
                      <span class="highlight-marker">→</span>
                      <p>{highlight}</p>
                    </div>
                  ))}
                </div>
              ) : (
                <p>{card.content}</p>
              )}
            </div>
          ))}

          <div class="features-grid">
            {features.map((feature) => (
              <div class="feature-card">
                <div class="feature-icon"></div>
                <h4>{feature.title}</h4>
                <p>{feature.description}</p>
              </div>
            ))}
          </div>

          {contentCards.slice(2).map((card) => (
            <div class={`content-card ${card.isProcess ? 'process-card' : ''}`}>
              <h3>{card.title}</h3>
              {card.steps ? (
                <div class="process-steps">
                  {card.steps.map((step) => (
                    <div class="process-step">
                      <div class="step-number">{step.step}</div>
                      <div class="step-content">
                        {step.title && <h4 class="step-title">{step.title}</h4>}
                        <p>{step.content}</p>
                      </div>
                    </div>
                  ))}
                </div>
              ) : card.highlights ? (
                <div class="highlight-list">
                  {card.highlights.map((highlight) => (
                    <div class="highlight-item">
                      <span class="highlight-marker">→</span>
                      <p>{highlight}</p>
                    </div>
                  ))}
                </div>
              ) : (
                <p>{card.content}</p>
              )}
            </div>
          ))}

          <!-- Locations We Serve - Internal linking section -->
          <div class="locations-links-section">
            <h2>{locationsHeading}</h2>
            <div class="locations-links-list">
              {locationLinks.map((location) => (
                <a href={location.href} class="location-link-item">
                  <div class="location-link-content">
                    <h4>{location.title}</h4>
                    <p>{location.description}</p>
                  </div>
                  <span class="location-link-arrow">→</span>
                </a>
              ))}
            </div>
          </div>

        </div>

        <aside class="sidebar">
          {ctaCards.map((cta) => (
            <div class={`cta-card ${cta.isDark ? 'dark' : ''}`}>
              <h3>{cta.title}</h3>
              <p>{cta.description}</p>
              <a href={cta.buttonHref} class="btn btn-primary btn-block">
                {cta.buttonText}
              </a>
            </div>
          ))}

          {infoCards.map((info) => (
            <div class="info-card">
              <h4>{info.title}</h4>
              {info.items ? (
                <ul>
                  {info.items.map((item) => <li>{item}</li>)}
                </ul>
              ) : (
                <p>{info.content}</p>
              )}
            </div>
          ))}
        </aside>
      </div>
    </div>
  </section>

  <!-- Trust Badges - Full width dark section -->
  {trustBadges && (
    <section class="trust-section">
      <div class="container">
        <div class="trust-badges">
          {trustBadges.map((badge: TrustBadge) => (
            <div class="trust-badge">
              <div class="trust-metric">{badge.metric}</div>
              <div class="trust-label">{badge.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <h2>{faqHeading}</h2>
      <div class="faq-list">
        {faqs.map((faq) => (
          <div class="faq-item">
            <button class="faq-question">
              <h4>{faq.question}</h4>
              <span class="faq-icon">+</span>
            </button>
            <div class="faq-answer">
              <p>{faq.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="cta-content">
      <h2>{bottomCTAHeading}</h2>
      <p>{bottomCTADescription}</p>
      <div class="cta-buttons">
        <a href={bottomCTAPrimaryHref} class="btn btn-primary btn-large">{bottomCTAPrimaryText}</a>
        <a href={bottomCTASecondaryHref} class="btn btn-secondary btn-large">{bottomCTASecondaryText}</a>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const faqItems = document.querySelectorAll('.faq-item');

    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      const answer = item.querySelector('.faq-answer');
      const icon = item.querySelector('.faq-icon');

      question?.addEventListener('click', () => {
        const isOpen = item.classList.contains('active');

        // Close all other items
        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.classList.remove('active');
            const otherAnswer = otherItem.querySelector('.faq-answer') as HTMLElement;
            const otherIcon = otherItem.querySelector('.faq-icon');
            if (otherAnswer) otherAnswer.style.maxHeight = '0';
            if (otherIcon) otherIcon.textContent = '+';
          }
        });

        // Toggle current item
        if (isOpen) {
          item.classList.remove('active');
          if (answer) (answer as HTMLElement).style.maxHeight = '0';
          if (icon) icon.textContent = '+';
        } else {
          item.classList.add('active');
          if (answer) (answer as HTMLElement).style.maxHeight = answer.scrollHeight + 'px';
          if (icon) icon.textContent = '−';
        }
      });
    });

    // Scroll-triggered animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-in');
        }
      });
    }, observerOptions);

    // Observe content cards and feature cards
    document.querySelectorAll('.content-card, .feature-card, .location-link-item').forEach(el => {
      observer.observe(el);
    });
  });
</script>

