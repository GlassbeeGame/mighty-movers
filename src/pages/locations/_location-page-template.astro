---
import Layout from '../../layouts/Layout.astro';

interface ServiceCard {
  title: string;
  description: string;
}

interface BenefitItem {
  title: string;
  description: string;
}

interface NeighborhoodCard {
  title: string;
  description: string;
}

interface FAQItem {
  question: string;
  answer: string;
}

interface TrustBadge {
  metric: string;
  label: string;
}

interface CTACard {
  title: string;
  description: string;
  buttonText: string;
  buttonHref: string;
  isDark?: boolean;
}

interface InfoCard {
  title: string;
  items?: string[];
  content?: string;
}

interface Props {
  // Page metadata
  title: string;
  description: string;
  noindex?: boolean;

  // Hero section
  locationBadge: string;
  heroTitle: string;
  heroDescription: string;

  // Intro section - Main content area (no boxes!)
  introHeading: string;
  introText: string;

  // Main content - One cohesive section
  mainContentHeading?: string;
  mainContent: string;

  // Why Choose Us
  whyHeading: string;
  benefits: BenefitItem[];

  // Services Overview - Simple grid, no boxes
  servicesHeading: string;
  services?: ServiceCard[];

  // Local details (optional)
  localKnowledgeText?: string;

  // Sidebar CTAs and Info
  ctaCards?: CTACard[];
  infoCards?: InfoCard[];

  // Neighborhoods
  neighborhoodsHeading: string;
  neighborhoods: NeighborhoodCard[];

  // Trust badges
  trustBadges?: TrustBadge[];

  // FAQ
  faqHeading: string;
  faqs: FAQItem[];

  // Bottom CTA
  bottomCTAHeading: string;
  bottomCTADescription: string;
  bottomCTAPrimaryText: string;
  bottomCTAPrimaryHref: string;
  bottomCTASecondaryText: string;
  bottomCTASecondaryHref: string;
}

const {
  title,
  description,
  noindex = true,
  locationBadge,
  heroTitle,
  heroDescription,
  introHeading,
  introText,
  mainContentHeading,
  mainContent,
  whyHeading,
  benefits,
  servicesHeading,
  services,
  localKnowledgeText,
  ctaCards,
  infoCards,
  neighborhoodsHeading,
  neighborhoods,
  trustBadges,
  faqHeading,
  faqs,
  bottomCTAHeading,
  bottomCTADescription,
  bottomCTAPrimaryText,
  bottomCTAPrimaryHref,
  bottomCTASecondaryText,
  bottomCTASecondaryHref,
} = Astro.props;
---

<Layout title={title} description={description} noindex={noindex}>
  <!-- Hero Section -->
  <section class="location-hero">
    <div class="hero-background"></div>
    <div class="hero-overlay"></div>
    <div class="hero-content-wrapper">
      <div class="location-badge">{locationBadge}</div>
      <h1>{heroTitle}</h1>
      <p>{heroDescription}</p>
      <div class="hero-cta-buttons">
        <a href={bottomCTAPrimaryHref} class="btn btn-primary btn-large">{bottomCTAPrimaryText}</a>
        <a href={bottomCTASecondaryHref} class="btn btn-secondary btn-large">{bottomCTASecondaryText}</a>
      </div>
    </div>
  </section>

  <!-- Main Content Area - Simple, Clean -->
  <div class="location-content">
    <div class="container">

      <!-- Two-column layout: Main content + Sidebar -->
      <div class="content-with-sidebar">

        <!-- Main Content Column -->
        <div class="main-column">
          <!-- Intro Section - No box, just text -->
          <section class="intro-section">
            <h2>{introHeading}</h2>
            <p class="intro-lead">{introText}</p>
          </section>

          <!-- Main Content - ONE section, not multiple boxes -->
          <section class="main-content-section">
            {mainContentHeading && <h2>{mainContentHeading}</h2>}
            <div class="main-content-text">
              <p>{mainContent}</p>
            </div>
          </section>
        </div>

        <!-- Sidebar Column -->
        {(ctaCards || infoCards) && (
          <aside class="sidebar-column">

            {/* CTA Cards */}
            {ctaCards && ctaCards.map((card: CTACard) => (
              <div class={`sidebar-cta-card ${card.isDark ? 'dark' : ''}`}>
                <h3>{card.title}</h3>
                <p>{card.description}</p>
                <a href={card.buttonHref} class="btn btn-primary btn-block">{card.buttonText}</a>
              </div>
            ))}

            {/* Info Cards */}
            {infoCards && infoCards.map((card: InfoCard) => (
              <div class="sidebar-info-card">
                <h3>{card.title}</h3>
                {card.items && (
                  <ul>
                    {card.items.map((item: string) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                )}
                {card.content && <p>{card.content}</p>}
              </div>
            ))}

          </aside>
        )}

      </div>

    </div>
  </div>

  <!-- Why Choose Us - Full width background change -->
  <section class="why-section-wrapper">
    <div class="container">
      <h2>{whyHeading}</h2>
      <div class="benefits-grid">
        {benefits.map((benefit: BenefitItem) => (
          <div class="benefit-card">
            <div class="benefit-icon"></div>
            <h3>{benefit.title}</h3>
            <p>{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Services Section - Back to white, simple grid -->
  {services && (
    <section class="services-section">
      <div class="container">
        <h2>{servicesHeading}</h2>
        <div class="services-grid">
          {services.map((service: ServiceCard) => (
            <div class="service-item">
              <h3>{service.title}</h3>
              <p>{service.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Local Knowledge - Optional callout section -->
  {localKnowledgeText && (
    <section class="local-knowledge-section">
      <div class="container">
        <div class="local-knowledge-box">
          <div class="knowledge-icon"></div>
          <p>{localKnowledgeText}</p>
        </div>
      </div>
    </section>
  )}

  <!-- Neighborhoods - Simple grid -->
  <section class="neighborhoods-section">
    <div class="container">
      <h2>{neighborhoodsHeading}</h2>
      <div class="neighborhoods-grid">
        {neighborhoods.map((neighborhood: NeighborhoodCard, index: number) => (
          <div class="neighborhood-card">
            <div class="neighborhood-number">{String(index + 1).padStart(2, '0')}</div>
            <h3>{neighborhood.title}</h3>
            <p>{neighborhood.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Trust Badges - Full width dark section -->
  {trustBadges && (
    <section class="trust-section">
      <div class="trust-badges">
        {trustBadges.map((badge: TrustBadge) => (
          <div class="trust-badge">
            <div class="trust-metric">{badge.metric}</div>
            <div class="trust-label">{badge.label}</div>
          </div>
        ))}
      </div>
    </section>
  )}

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <h2>{faqHeading}</h2>
      <div class="faq-list">
        {faqs.map((faq: FAQItem) => (
          <div class="faq-item">
            <button class="faq-question">
              <h3>{faq.question}</h3>
              <span class="faq-icon">+</span>
            </button>
            <div class="faq-answer">
              <p>{faq.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Bottom CTA Section -->
  <section class="cta-section">
    <div class="cta-content">
      <h2>{bottomCTAHeading}</h2>
      <p>{bottomCTADescription}</p>
      <div class="cta-buttons">
        <a href={bottomCTAPrimaryHref} class="btn btn-primary btn-large">{bottomCTAPrimaryText}</a>
        <a href={bottomCTASecondaryHref} class="btn btn-secondary btn-large">{bottomCTASecondaryText}</a>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const faqItems = document.querySelectorAll('.faq-item');

    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      const answer = item.querySelector('.faq-answer');
      const icon = item.querySelector('.faq-icon');

      question?.addEventListener('click', () => {
        const isOpen = item.classList.contains('active');

        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.classList.remove('active');
            const otherAnswer = otherItem.querySelector('.faq-answer') as HTMLElement;
            const otherIcon = otherItem.querySelector('.faq-icon');
            if (otherAnswer) otherAnswer.style.maxHeight = '0';
            if (otherIcon) otherIcon.textContent = '+';
          }
        });

        if (isOpen) {
          item.classList.remove('active');
          if (answer) (answer as HTMLElement).style.maxHeight = '0';
          if (icon) icon.textContent = '+';
        } else {
          item.classList.add('active');
          if (answer) (answer as HTMLElement).style.maxHeight = answer.scrollHeight + 'px';
          if (icon) icon.textContent = 'âˆ’';
        }
      });
    });
  });
</script>

