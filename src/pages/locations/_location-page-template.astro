---
import Layout from '../../layouts/Layout.astro';

interface ServiceCard {
  title: string;
  description: string;
}

interface BenefitItem {
  title: string;
  description: string;
}

interface NeighborhoodCard {
  title: string;
  description: string;
}

interface FAQItem {
  question: string;
  answer: string;
}

interface TrustBadge {
  metric: string;
  label: string;
}

interface CTACard {
  title: string;
  description: string;
  buttonText: string;
  buttonHref: string;
  isDark?: boolean;
}

interface InfoCard {
  title: string;
  items?: string[];
  content?: string;
}

interface Props {
  // Page metadata
  title: string;
  description: string;
  noindex?: boolean;

  // Hero section
  locationBadge: string;
  heroTitle: string;
  heroDescription: string;

  // Intro section - Main content area (no boxes!)
  introHeading: string;
  introText: string;

  // Main content - One cohesive section
  mainContentHeading?: string;
  mainContent?: string;

  // Why Choose Us
  whyHeading: string;
  benefits: BenefitItem[];

  // Services Overview - Simple grid, no boxes
  servicesHeading: string;
  services?: ServiceCard[];

  // Local details (optional)
  localKnowledgeText?: string;

  // Sidebar CTAs and Info
  ctaCards?: CTACard[];
  infoCards?: InfoCard[];

  // Neighborhoods
  neighborhoodsHeading: string;
  neighborhoods: NeighborhoodCard[];

  // Trust badges
  trustBadges?: TrustBadge[];

  // FAQ
  faqHeading: string;
  faqs: FAQItem[];

  // Bottom CTA
  bottomCTAHeading: string;
  bottomCTADescription: string;
  bottomCTAPrimaryText: string;
  bottomCTAPrimaryHref: string;
  bottomCTASecondaryText: string;
  bottomCTASecondaryHref: string;
}

const {
  title,
  description,
  noindex = true,
  locationBadge,
  heroTitle,
  heroDescription,
  introHeading,
  introText,
  mainContentHeading,
  mainContent,
  whyHeading,
  benefits,
  servicesHeading,
  services,
  localKnowledgeText,
  ctaCards,
  infoCards,
  neighborhoodsHeading,
  neighborhoods,
  trustBadges,
  faqHeading,
  faqs,
  bottomCTAHeading,
  bottomCTADescription,
  bottomCTAPrimaryText,
  bottomCTAPrimaryHref,
  bottomCTASecondaryText,
  bottomCTASecondaryHref,
} = Astro.props;
---

<Layout title={title} description={description} noindex={noindex}>
  <!-- Hero Section -->
  <section class="location-hero">
    <div class="hero-background"></div>
    <div class="hero-overlay"></div>
    <div class="hero-content-wrapper">
      <div class="location-badge">{locationBadge}</div>
      <h1 set:html={heroTitle}></h1>
      <p>{heroDescription}</p>
      <div class="hero-cta-buttons">
        <a href={bottomCTAPrimaryHref} class="btn btn-primary btn-large">{bottomCTAPrimaryText}</a>
        <a href={bottomCTASecondaryHref} class="btn btn-secondary btn-large">{bottomCTASecondaryText}</a>
      </div>
    </div>
  </section>

  <!-- Main Content Area - Simple, Clean -->
  <div class="location-content">
    <div class="container">

      <!-- Two-column layout: Main content + Sidebar -->
      <div class="content-with-sidebar">

        <!-- Main Content Column -->
        <div class="main-column">
          <!-- Intro Section - No box, just text -->
          <section class="intro-section">
            <h2>{introHeading}</h2>
            <p class="intro-lead">{introText}</p>
          </section>

          <!-- Main Content - Enhanced visual layout with better structure -->
          {mainContent && (() => {
            const paragraphs = mainContent.split('\n\n').filter(p => p.trim());
            const totalParagraphs = paragraphs.length;
            
            return (
              <section class="main-content-section">
                {mainContentHeading && <h2>{mainContentHeading}</h2>}
                <div class="main-content-text">
                  {paragraphs.map((paragraph: string, index: number) => {
                    const trimmed = paragraph.trim();
                    if (!trimmed) return null;
                    
                    // First paragraph - lead paragraph with visual separation
                    if (index === 0) {
                      return (
                        <div class="content-block content-block-lead">
                          <p class="lead-paragraph">{trimmed}</p>
                        </div>
                      );
                    }
                    
                    // Check for key paragraphs that deserve highlight treatment
                    const isImportant = /(local knowledge|transparent|flexible|professional equipment|weather|landmarks|compared to)/i.test(trimmed);
                    const isLongImportant = isImportant && trimmed.length > 150;
                    
                    // Middle paragraphs - regular content with visual breaks
                    if (index > 0 && index < totalParagraphs - 2) {
                      if (isLongImportant) {
                        return (
                          <div class="content-block content-block-highlight">
                            <p>{trimmed}</p>
                          </div>
                        );
                      }
                      
                      return (
                        <div class="content-block">
                          <p>{trimmed}</p>
                        </div>
                      );
                    }
                    
                    // Second-to-last paragraph - often contains comparison/important info
                    if (index === totalParagraphs - 2) {
                      return (
                        <div class="content-block content-block-emphasis">
                          <p>{trimmed}</p>
                        </div>
                      );
                    }
                    
                    // Last paragraph - call-to-action style
                    if (index === totalParagraphs - 1) {
                      return (
                        <div class="content-block content-block-cta">
                          <p>{trimmed}</p>
                        </div>
                      );
                    }
                    
                    return (
                      <div class="content-block">
                        <p>{trimmed}</p>
                      </div>
                    );
                  })}
                </div>
              </section>
            );
          })()}

          <!-- Services Section - Inside main column -->
          {services && (
            <section class="services-section-inline">
              <h2>{servicesHeading}</h2>
              <div class="services-grid">
                {services.map((service: ServiceCard) => (
                  <div class="service-item">
                    <h3>{service.title}</h3>
                    <p>{service.description}</p>
                  </div>
                ))}
              </div>
            </section>
          )}

          <!-- Local Knowledge - Inside main column -->
          {localKnowledgeText && (
            <section class="local-knowledge-inline">
              <div class="local-knowledge-box">
                <div class="knowledge-icon"></div>
                <p>{localKnowledgeText}</p>
              </div>
            </section>
          )}
        </div>

        <!-- Sidebar Column -->
        {(ctaCards || infoCards) && (
          <aside class="sidebar-column">

            {/* CTA Cards */}
            {ctaCards && ctaCards.map((card: CTACard) => (
              <div class={`sidebar-cta-card ${card.isDark ? 'dark' : ''}`}>
                <h3>{card.title}</h3>
                <p>{card.description}</p>
                <a href={card.buttonHref} class="btn btn-primary btn-block">{card.buttonText}</a>
              </div>
            ))}

            {/* Info Cards */}
            {infoCards && infoCards.map((card: InfoCard) => (
              <div class="sidebar-info-card">
                <h3>{card.title}</h3>
                {card.items && (
                  <ul>
                    {card.items.map((item: string) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                )}
                {card.content && <p>{card.content}</p>}
              </div>
            ))}

          </aside>
        )}

      </div>

    </div>
  </div>

  <!-- Why Choose Us - Full width background change -->
  <section class="why-section-wrapper">
    <div class="container">
      <h2>{whyHeading}</h2>
      <div class="benefits-grid">
        {benefits.map((benefit: BenefitItem) => (
          <div class="benefit-card">
            <div class="benefit-icon"></div>
            <h3>{benefit.title}</h3>
            <p>{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Neighborhoods - Simple grid -->
  <section class="neighborhoods-section">
    <div class="container">
      <h2>{neighborhoodsHeading}</h2>
      <div class="neighborhoods-grid">
        {neighborhoods.map((neighborhood: NeighborhoodCard, index: number) => (
          <div class="neighborhood-card">
            <div class="neighborhood-number">{String(index + 1).padStart(2, '0')}</div>
            <h3>{neighborhood.title}</h3>
            <p>{neighborhood.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Trust Badges - Full width dark section -->
  {trustBadges && (
    <section class="trust-section">
      <div class="container">
        <div class="trust-badges">
          {trustBadges.map((badge: TrustBadge) => (
            <div class="trust-badge">
              <div class="trust-metric">{badge.metric}</div>
              <div class="trust-label">{badge.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <h2>{faqHeading}</h2>
      <div class="faq-list">
        {faqs.map((faq: FAQItem) => (
          <div class="faq-item">
            <button class="faq-question">
              <h3>{faq.question}</h3>
              <span class="faq-icon">+</span>
            </button>
            <div class="faq-answer">
              <p>{faq.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Bottom CTA Section -->
  <section class="cta-section">
    <div class="cta-content">
      <h2>{bottomCTAHeading}</h2>
      <p>{bottomCTADescription}</p>
      <div class="cta-buttons">
        <a href={bottomCTAPrimaryHref} class="btn btn-primary btn-large">{bottomCTAPrimaryText}</a>
        <a href={bottomCTASecondaryHref} class="btn btn-secondary btn-large">{bottomCTASecondaryText}</a>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const faqItems = document.querySelectorAll('.faq-item');

    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      const answer = item.querySelector('.faq-answer');
      const icon = item.querySelector('.faq-icon');

      question?.addEventListener('click', () => {
        const isOpen = item.classList.contains('active');

        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.classList.remove('active');
            const otherAnswer = otherItem.querySelector('.faq-answer') as HTMLElement;
            const otherIcon = otherItem.querySelector('.faq-icon');
            if (otherAnswer) otherAnswer.style.maxHeight = '0';
            if (otherIcon) otherIcon.textContent = '+';
          }
        });

        if (isOpen) {
          item.classList.remove('active');
          if (answer) (answer as HTMLElement).style.maxHeight = '0';
          if (icon) icon.textContent = '+';
        } else {
          item.classList.add('active');
          if (answer) (answer as HTMLElement).style.maxHeight = answer.scrollHeight + 'px';
          if (icon) icon.textContent = 'âˆ’';
        }
      });
    });
  });
</script>

<style>
  /* Hero Section */
  .location-hero {
    min-height: 60vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    padding: 6rem 0;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #000000;
    z-index: 0;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: transparent;
    z-index: 1;
  }

  .hero-content-wrapper {
    position: relative;
    z-index: 2;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 3rem;
    max-width: 750px;
  }

  .location-badge {
    display: inline-block;
    background: var(--yellow);
    color: var(--black);
    padding: 0.75rem 2rem;
    font-size: 0.9rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 2rem;
    clip-path: polygon(0 0, calc(100% - 12px) 0, 100% 12px, 100% 100%, 0 100%);
  }

  .location-hero h1 {
    font-size: clamp(3rem, 7vw, 5.5rem);
    font-weight: 900;
    color: var(--white);
    margin-bottom: 1.5rem;
    letter-spacing: -3px;
    line-height: 1;
  }

  .location-hero h1 .highlight {
    color: var(--yellow);
  }

  .location-hero p {
    font-size: 1.3rem;
    color: var(--gray-200);
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }

  .hero-cta-buttons {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 3rem;
  }

  /* Location Content - Clean, no boxes */
  .location-content {
    padding: 6rem 0 4rem;
    background: var(--white);
  }

  /* Two-column layout */
  .content-with-sidebar {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 4rem;
    align-items: start;
  }

  .main-column {
    min-width: 0; /* Prevents grid overflow */
  }

  .sidebar-column {
    position: sticky;
    top: 100px;
    align-self: start;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Intro Section - Simple, no box */
  .intro-section {
    margin-bottom: 5rem;
    text-align: center;
  }

  .intro-section h2 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 900;
    color: var(--black);
    margin-bottom: 2rem;
    letter-spacing: -2px;
  }

  .intro-lead {
    font-size: 1.35rem;
    color: var(--gray-600);
    line-height: 1.8;
    max-width: 900px;
    margin: 0 auto;
  }

  /* Main Content - Enhanced visual layout with structured blocks */
  .main-content-section {
    margin-bottom: 6rem;
  }

  .main-content-section h2 {
    font-size: clamp(2.2rem, 4vw, 3rem);
    font-weight: 900;
    color: var(--black);
    margin-bottom: 2.5rem;
    letter-spacing: -2px;
  }

  .main-content-text {
    max-width: 900px;
  }

  /* Content blocks for visual separation */
  .content-block {
    margin-bottom: 2rem;
    transition: all 0.3s ease;
  }

  .content-block p {
    font-size: 1.15rem;
    color: var(--gray-700);
    line-height: 1.9;
    margin: 0;
  }

  /* Lead paragraph block - first paragraph, more prominent */
  .content-block-lead {
    margin-bottom: 3rem;
    padding-bottom: 2.5rem;
    border-bottom: 3px solid var(--gray-200);
  }

  .content-block-lead .lead-paragraph {
    font-size: 1.3rem;
    color: var(--black);
    font-weight: 500;
    line-height: 2;
    letter-spacing: -0.2px;
  }

  /* Highlight block - for important information */
  .content-block-highlight {
    background: linear-gradient(135deg, rgba(246, 245, 16, 0.08) 0%, rgba(246, 245, 16, 0.03) 100%);
    border-left: 5px solid var(--yellow);
    padding: 2rem 2.5rem;
    margin: 2.5rem -2.5rem;
    border-radius: 0 8px 8px 0;
    position: relative;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
    transition: all 0.3s ease;
  }

  .content-block-highlight:hover {
    box-shadow: 0 4px 20px rgba(246, 245, 16, 0.15);
    transform: translateX(4px);
    border-left-width: 6px;
  }

  .content-block-highlight p {
    color: var(--gray-800);
    font-weight: 400;
    position: relative;
  }

  /* Emphasis block - for comparison/important info */
  .content-block-emphasis {
    background: var(--gray-50);
    border: 2px solid var(--gray-200);
    padding: 2rem 2.5rem;
    margin: 2.5rem -2.5rem;
    border-radius: 8px;
    position: relative;
  }

  .content-block-emphasis::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--yellow) 0%, transparent 100%);
    border-radius: 8px 8px 0 0;
  }

  .content-block-emphasis p {
    color: var(--gray-800);
    font-weight: 400;
  }

  /* CTA block - for final call-to-action paragraph */
  .content-block-cta {
    background: linear-gradient(135deg, var(--black) 0%, #1a1a1a 100%);
    border: 3px solid var(--yellow);
    padding: 2.5rem 3rem;
    margin: 3rem -3rem 0;
    border-radius: 8px;
    position: relative;
    clip-path: polygon(0 0, calc(100% - 20px) 0, 100% 20px, 100% 100%, 0 100%);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  }

  .content-block-cta::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 20px;
    height: 20px;
    background: var(--yellow);
    clip-path: polygon(100% 0, 100% 100%, 0 0);
  }

  .content-block-cta p {
    color: var(--white);
    font-size: 1.2rem;
    line-height: 1.95;
    font-weight: 400;
    margin: 0;
  }

  /* Regular content blocks - subtle visual breaks */
  .content-block:not(.content-block-lead):not(.content-block-highlight):not(.content-block-emphasis):not(.content-block-cta) {
    padding-left: 1.5rem;
    border-left: 2px solid var(--gray-200);
    position: relative;
  }

  .content-block:not(.content-block-lead):not(.content-block-highlight):not(.content-block-emphasis):not(.content-block-cta)::before {
    content: '';
    position: absolute;
    left: -2px;
    top: 0;
    width: 2px;
    height: 0;
    background: var(--yellow);
    transition: height 0.3s ease;
  }

  .content-block:not(.content-block-lead):not(.content-block-highlight):not(.content-block-emphasis):not(.content-block-cta):hover::before {
    height: 100%;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .content-block-highlight,
    .content-block-emphasis,
    .content-block-cta {
      margin-left: 0;
      margin-right: 0;
      padding: 1.5rem;
    }

    .content-block-lead .lead-paragraph {
      font-size: 1.2rem;
    }

    .content-block-cta p {
      font-size: 1.1rem;
    }
  }

  /* Sidebar CTA Cards */
  .sidebar-cta-card {
    background: var(--white);
    border: 3px solid var(--black);
    padding: 2.5rem 2rem;
    position: relative;
    clip-path: polygon(0 0, calc(100% - 20px) 0, 100% 20px, 100% 100%, 0 100%);
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .sidebar-cta-card::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 20px;
    height: 20px;
    background: var(--yellow);
    clip-path: polygon(100% 0, 100% 100%, 0 0);
  }

  .sidebar-cta-card.dark {
    background: linear-gradient(135deg, var(--black) 0%, #1a1a1a 100%);
    border-color: var(--yellow);
  }

  .sidebar-cta-card:hover {
    border-color: var(--yellow);
    transform: translate(-4px, -4px);
    box-shadow: 8px 8px 0 rgba(246, 245, 16, 0.9), 0 0 30px rgba(246, 245, 16, 0.4);
  }

  .sidebar-cta-card h3 {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--black);
    margin-bottom: 1rem;
  }

  .sidebar-cta-card.dark h3 {
    color: var(--white);
  }

  .sidebar-cta-card p {
    font-size: 1rem;
    color: var(--gray-600);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .sidebar-cta-card.dark p {
    color: var(--gray-300);
  }

  .btn-block {
    width: 100%;
    text-align: center;
  }

  /* Sidebar Info Cards */
  .sidebar-info-card {
    background: var(--gray-50);
    border-left: 5px solid var(--yellow);
    padding: 2rem 1.5rem;
  }

  .sidebar-info-card h3 {
    font-size: 1.3rem;
    font-weight: 800;
    color: var(--black);
    margin-bottom: 1rem;
  }

  .sidebar-info-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sidebar-info-card ul li {
    font-size: 0.95rem;
    color: var(--gray-700);
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
  }

  .sidebar-info-card ul li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 8px;
    height: 8px;
    background: var(--yellow);
    clip-path: polygon(0 0, calc(100% - 3px) 0, 100% 3px, 100% 100%, 0 100%);
  }

  .sidebar-info-card p {
    font-size: 1rem;
    color: var(--gray-700);
    line-height: 1.7;
    margin: 0;
  }

  /* Services Section - Inline in main column */
  .services-section-inline {
    margin-top: 4rem;
  }

  .services-section-inline h2 {
    font-size: clamp(2.2rem, 4vw, 3rem);
    font-weight: 900;
    color: var(--black);
    margin-bottom: 2.5rem;
    letter-spacing: -2px;
  }

  .services-section-inline .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .services-section-inline .service-item {
    padding: 1.5rem 0;
    border-bottom: 3px solid var(--gray-100);
    transition: all 0.3s ease;
  }

  .services-section-inline .service-item:hover {
    border-bottom-color: var(--yellow);
    padding-left: 1.5rem;
  }

  .services-section-inline .service-item h3 {
    font-size: 1.3rem;
    font-weight: 800;
    color: var(--black);
    margin-bottom: 0.75rem;
  }

  .services-section-inline .service-item p {
    font-size: 1rem;
    color: var(--gray-600);
    line-height: 1.7;
  }

  /* Local Knowledge - Inline in main column */
  .local-knowledge-inline {
    margin-top: 4rem;
  }

  .local-knowledge-inline .local-knowledge-box {
    background: linear-gradient(135deg, var(--black) 0%, #1a1a1a 100%);
    padding: 2.5rem;
    position: relative;
    display: flex;
    align-items: center;
    gap: 1.5rem;
    clip-path: polygon(0 0, calc(100% - 25px) 0, 100% 25px, 100% 100%, 0 100%);
  }

  .local-knowledge-inline .local-knowledge-box::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 25px;
    height: 25px;
    background: var(--yellow);
    clip-path: polygon(100% 0, 100% 100%, 0 0);
  }

  .local-knowledge-inline .knowledge-icon {
    width: 3.5rem;
    height: 3.5rem;
    background: var(--yellow);
    clip-path: polygon(0 0, calc(100% - 10px) 0, 100% 10px, 100% 100%, 0 100%);
    flex-shrink: 0;
  }

  .local-knowledge-inline .local-knowledge-box p {
    font-size: 1rem;
    color: var(--gray-200);
    line-height: 1.7;
    margin: 0;
  }

  /* Why Choose Us - Full width background */
  .why-section-wrapper {
    background: var(--gray-50);
    padding: 6rem 0;
    margin-bottom: 0;
