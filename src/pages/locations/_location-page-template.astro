---
import Layout from '../../layouts/Layout.astro';

interface ServiceCard {
  title: string;
  description: string;
}

interface BenefitItem {
  title: string;
  description: string;
}

interface NeighborhoodCard {
  title: string;
  description: string;
}

interface FAQItem {
  question: string;
  answer: string;
}

interface TrustBadge {
  metric: string;
  label: string;
}

interface Props {
  // Page metadata
  title: string;
  description: string;
  noindex?: boolean;

  // Hero section
  locationBadge: string;
  heroTitle: string;
  heroDescription: string;
  heroCTAPrimaryText: string;
  heroCTAPrimaryHref: string;
  heroCTASecondaryText: string;
  heroCTASecondaryHref: string;

  // Intro section
  introHeading: string;
  introText: string;

  // Why Choose Us (moved higher)
  whyHeading: string;
  benefits: BenefitItem[];

  // Services Overview
  servicesHeading: string;
  servicesIntro: string;
  services: ServiceCard[];

  // Local Service Details
  localHeading: string;
  localContent: string;
  drivingDirections?: string;
  responseTimes?: string;
  weatherConsiderations?: string;

  // Neighborhoods
  neighborhoodsHeading: string;
  neighborhoods: NeighborhoodCard[];

  // Trust badges
  trustBadges: TrustBadge[];

  // FAQ
  faqHeading: string;
  faqs: FAQItem[];

  // Bottom CTA
  bottomCTAHeading: string;
  bottomCTADescription: string;
  bottomCTAPrimaryText: string;
  bottomCTAPrimaryHref: string;
  bottomCTASecondaryText: string;
  bottomCTASecondaryHref: string;
}

const {
  title,
  description,
  noindex = true,
  locationBadge,
  heroTitle,
  heroDescription,
  heroCTAPrimaryText,
  heroCTAPrimaryHref,
  heroCTASecondaryText,
  heroCTASecondaryHref,
  introHeading,
  introText,
  whyHeading,
  benefits,
  servicesHeading,
  servicesIntro,
  services,
  localHeading,
  localContent,
  drivingDirections,
  responseTimes,
  weatherConsiderations,
  neighborhoodsHeading,
  neighborhoods,
  trustBadges,
  faqHeading,
  faqs,
  bottomCTAHeading,
  bottomCTADescription,
  bottomCTAPrimaryText,
  bottomCTAPrimaryHref,
  bottomCTASecondaryText,
  bottomCTASecondaryHref,
} = Astro.props;
---

<Layout title={title} description={description} noindex={noindex}>
  <!-- Hero Section with CTAs -->
  <section class="location-hero">
    <div class="hero-background"></div>
    <div class="hero-overlay"></div>
    <div class="hero-content-wrapper">
      <div class="location-badge">{locationBadge}</div>
      <h1>{heroTitle}</h1>
      <p>{heroDescription}</p>
      <div class="hero-cta-buttons">
        <a href={heroCTAPrimaryHref} class="btn btn-primary btn-large">{heroCTAPrimaryText}</a>
        <a href={heroCTASecondaryHref} class="btn btn-secondary btn-large">{heroCTASecondaryText}</a>
      </div>
    </div>
  </section>

  <!-- Main Content - Full Width -->
  <div class="location-content">
    <div class="container">

      <!-- Intro Section -->
      <section class="intro-section">
        <h2>{introHeading}</h2>
        <p>{introText}</p>
      </section>

      <!-- Why Choose Us - Moved Higher -->
      <section class="why-section">
        <h2>{whyHeading}</h2>
        <div class="benefits-grid">
          {benefits.map((benefit) => (
            <div class="benefit-card">
              <div class="benefit-icon"></div>
              <h3>{benefit.title}</h3>
              <p>{benefit.description}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- Services Overview -->
      <section class="services-section">
        <h2>{servicesHeading}</h2>
        <p class="services-intro">{servicesIntro}</p>
        <div class="services-grid">
          {services.map((service) => (
            <div class="service-card">
              <h3>{service.title}</h3>
              <p>{service.description}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- Local Service Details -->
      <section class="local-section">
        <h2>{localHeading}</h2>
        <div class="local-content-main">
          <p>{localContent}</p>
        </div>

        {(drivingDirections || responseTimes || weatherConsiderations) && (
          <div class="local-details-grid">
            {drivingDirections && (
              <div class="local-detail-card">
                <h3>Driving Directions</h3>
                <p>{drivingDirections}</p>
              </div>
            )}
            {responseTimes && (
              <div class="local-detail-card">
                <h3>Response Times</h3>
                <p>{responseTimes}</p>
              </div>
            )}
            {weatherConsiderations && (
              <div class="local-detail-card">
                <h3>Weather Considerations</h3>
                <p>{weatherConsiderations}</p>
              </div>
            )}
          </div>
        )}
      </section>

      <!-- Neighborhoods -->
      <section class="neighborhoods-section">
        <h2>{neighborhoodsHeading}</h2>
        <div class="neighborhoods-grid">
          {neighborhoods.map((neighborhood, index) => (
            <div class="neighborhood-card">
              <div class="neighborhood-number">{String(index + 1).padStart(2, '0')}</div>
              <h3>{neighborhood.title}</h3>
              <p>{neighborhood.description}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- Trust Badges -->
      <section class="trust-section">
        <div class="trust-badges">
          {trustBadges.map((badge) => (
            <div class="trust-badge">
              <div class="trust-metric">{badge.metric}</div>
              <div class="trust-label">{badge.label}</div>
            </div>
          ))}
        </div>
      </section>

      <!-- FAQ Section -->
      <section class="faq-section">
        <h2>{faqHeading}</h2>
        <div class="faq-list">
          {faqs.map((faq) => (
            <div class="faq-item">
              <button class="faq-question">
                <h3>{faq.question}</h3>
                <span class="faq-icon">+</span>
              </button>
              <div class="faq-answer">
                <p>{faq.answer}</p>
              </div>
            </div>
          ))}
        </div>
      </section>

    </div>
  </div>

  <!-- Bottom CTA Section -->
  <section class="cta-section">
    <div class="cta-content">
      <h2>{bottomCTAHeading}</h2>
      <p>{bottomCTADescription}</p>
      <div class="cta-buttons">
        <a href={bottomCTAPrimaryHref} class="btn btn-primary btn-large">{bottomCTAPrimaryText}</a>
        <a href={bottomCTASecondaryHref} class="btn btn-secondary btn-large">{bottomCTASecondaryText}</a>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const faqItems = document.querySelectorAll('.faq-item');

    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      const answer = item.querySelector('.faq-answer');
      const icon = item.querySelector('.faq-icon');

      question?.addEventListener('click', () => {
        const isOpen = item.classList.contains('active');

        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.classList.remove('active');
            const otherAnswer = otherItem.querySelector('.faq-answer') as HTMLElement;
            const otherIcon = otherItem.querySelector('.faq-icon');
            if (otherAnswer) otherAnswer.style.maxHeight = '0';
            if (otherIcon) otherIcon.textContent = '+';
          }
        });

        if (isOpen) {
          item.classList.remove('active');
          if (answer) (answer as HTMLElement).style.maxHeight = '0';
          if (icon) icon.textContent = '+';
        } else {
          item.classList.add('active');
          if (answer) (answer as HTMLElement).style.maxHeight = answer.scrollHeight + 'px';
          if (icon) icon.textContent = 'âˆ’';
        }
      });
    });
  });
</script>

<style>
  /* Hero Section with CTAs */
  .location-hero {
    min-height: 65vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    padding: 5rem 0;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('https://images.unsplash.com/photo-1581368087049-e82c8f0e2a6f?w=1920&q=80') center/cover no-repeat;
    z-index: 0;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.6) 60%, transparent 100%);
    z-index: 1;
  }

  .hero-content-wrapper {
    position: relative;
    z-index: 2;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 3rem;
    max-width: 700px;
  }

  .location-badge {
    display: inline-block;
    background: var(--yellow);
    color: var(--black);
    padding: 0.75rem 2rem;
    font-size: 0.9rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 2rem;
    clip-path: polygon(0 0, calc(100% - 12px) 0, 100% 12px, 100% 100%, 0 100%);
  }

  .location-hero h1 {
    font-size: clamp(3rem, 7vw, 5rem);
    font-weight: 900;
    color: var(--white);
    margin-bottom: 1.5rem;
    letter-spacing: -3px;
    line-height: 1;
  }

  .location-hero p {
    font-size: 1.25rem;
    color: var(--gray-200);
    line-height: 1.7;
    margin-bottom: 2.5rem;
    max-width: 600px;
  }

  .hero-cta-buttons {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 3rem;
  }

  .location-content {
    padding: 6rem 0 4rem;
    position: relative;
    overflow: hidden;
  }

  .location-content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      linear-gradient(45deg, transparent 45%, rgba(246, 245, 16, 0.02) 45%, rgba(246, 245, 16, 0.02) 55%, transparent 55%),
      linear-gradient(-45deg, transparent 45%, rgba(0, 0, 0, 0.02) 45%, rgba(0, 0, 0, 0.02) 55%, transparent 55%);
    background-size: 60px 60px;
    opacity: 0.5;
    pointer-events: none;
  }

  /* Section Spacing */
  .intro-section,
  .why-section,
  .services-section,
  .local-section,
  .neighborhoods-section,
  .trust-section,
  .faq-section {
    margin-bottom: 6rem;
    position: relative;
    z-index: 1;
  }

  /* Section Headings */
  h2 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 900;
    color: var(--black);
    margin-bottom: 2.5rem;
    letter-spacing: -2px;
    line-height: 1.1;
  }

  /* Intro Section */
  .intro-section p {
    font-size: 1.3rem;
    color: var(--gray-600);
    line-height: 1.8;
    max-width: 900px;
  }

  /* Why Choose Us - Grid Cards */
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .benefit-card {
    background: var(--white);
    padding: 2.5rem 2rem;
    border: 3px solid var(--black);
    position: relative;
    clip-path: polygon(0 0, calc(100% - 20px) 0, 100% 20px, 100% 100%, 0 100%);
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .benefit-card::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 20px;
    height: 20px;
    background: var(--yellow);
    clip-path: polygon(100% 0, 100% 100%, 0 0);
  }

  .benefit-card:hover {
    border-color: var(--yellow);
    transform: translate(-4px, -4px);
    box-shadow: 8px 8px 0 rgba(246, 245, 16, 0.9), 0 0 30px rgba(246, 245, 16, 0.4);
  }

  .benefit-icon {
    width: 3.5rem;
    height: 3.5rem;
    background: var(--yellow);
    clip-path: polygon(0 0, calc(100% - 10px) 0, 100% 10px, 100% 100%, 0 100%);
    margin-bottom: 1.5rem;
  }

  .benefit-card h3 {
    font-size: 1.4rem;
    font-weight: 800;
    color: var(--black);
    margin-bottom: 0.75rem;
  }

  .benefit-card p {
    font-size: 1.05rem;
    color: var(--gray-600);
    line-height: 1.7;
  }

  /* Services Section */
  .services-intro {
    font-size: 1.2rem;
    color: var(--gray-600);
    line-height: 1.8;
    margin-bottom: 3rem;
    max-width: 900px;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background: var(--gray-50);
    padding: 2.5rem 2rem;
    border-left: 5px solid var(--yellow);
    transition: all 0.3s ease;
  }

  .service-card:hover {
    background: var(--white);
    border-left-width: 8px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    transform: translateX(8px);
  }

  .service-card h3 {
    font-size: 1.4rem;
    font-weight: 800;
    color: var(--black);
    margin-bottom: 0.75rem;
  }

  .service-card p {
    font-size: 1.05rem;
    color: var(--gray-600);
    line-height: 1.7;
  }

  /* Local Section */
  .local-content-main {
    margin-bottom: 3rem;
  }

  .local-content-main p {
    font-size: 1.15rem;
    color: var(--gray-600);
    line-height: 1.8;
  }

  .local-details-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .local-detail-card {
    background: var(--white);
    padding: 2rem;
    border: 2px solid var(--gray-200);
    border-left: 5px solid var(--black);
    transition: all 0.3s ease;
  }

  .local-detail-card:hover {
    border-left-color: var(--yellow);
    border-left-width: 8px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
    transform: translateX(8px);
  }

  .local-detail-card h3 {
    font-size: 1.3rem;
    font-weight: 800;
    color: var(--black);
    margin-bottom: 1rem;
  }

  .local-detail-card p {
    font-size: 1rem;
    color: var(--gray-600);
    line-height: 1.7;
  }

  /* Neighborhoods */
  .neighborhoods-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 2rem;
  }

  .neighborhood-card {
    background: var(--gray-50);
    padding: 2.5rem 2rem;
    border-left: 5px solid var(--yellow);
    position: relative;
    transition: all 0.3s ease;
  }

  .neighborhood-card:hover {
    background: var(--white);
    border-left-width: 8px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    transform: translateX(8px);
  }

  .neighborhood-number {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    background: var(--black);
    color: var(--yellow);
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 900;
    font-size: 0.9rem;
  }

  .neighborhood-card h3 {
    font-size: 1.3rem;
    font-weight: 800;
    color: var(--black);
    margin-bottom: 0.75rem;
    padding-right: 3rem;
  }

  .neighborhood-card p {
    font-size: 1rem;
    color: var(--gray-600);
    line-height: 1.7;
  }

  /* Trust Badges */
  .trust-section {
    background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
    margin-left: calc(-50vw + 50%);
    margin-right: calc(-50vw + 50%);
    padding: 4rem 3rem;
  }

  .trust-badges {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 3rem;
  }

  .trust-badge {
    text-align: center;
    padding: 2rem;
    position: relative;
  }

  .trust-badge::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60%;
    height: 3px;
    background: var(--yellow);
  }

  .trust-metric {
    font-size: 3rem;
    font-weight: 900;
    color: var(--yellow);
    margin-bottom: 0.5rem;
    letter-spacing: -2px;
  }

  .trust-label {
    font-size: 1rem;
    font-weight: 700;
    color: var(--gray-300);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* FAQ Section */
  .faq-section {
    padding-top: 2rem;
  }

  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 900px;
  }

  .faq-item {
    background: var(--white);
    border: 3px solid var(--black);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    position: relative;
    clip-path: polygon(0 0, calc(100% - 20px) 0, 100% 20px, 100% 100%, 0 100%);
  }

  .faq-item::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 20px;
    height: 20px;
    background: var(--yellow);
    clip-path: polygon(100% 0, 100% 100%, 0 0);
    z-index: 1;
  }

  .faq-item:hover {
    border-color: var(--yellow);
    transform: translate(-4px, -4px);
    box-shadow: 8px 8px 0 rgba(246, 245, 16, 0.9), 0 0 30px rgba(246, 245, 16, 0.4);
  }

  .faq-question {
    width: 100%;
    padding: 1.75rem 2rem;
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: left;
    transition: all 0.3s ease;
  }

  .faq-question:hover {
    background: rgba(246, 245, 16, 0.05);
  }

  .faq-question h3 {
    font-size: 1.2rem;
    font-weight: 800;
    color: var(--black);
    margin: 0;
  }

  .faq-icon {
    font-size: 2rem;
    font-weight: 300;
    color: var(--yellow);
    line-height: 1;
    transition: transform 0.3s ease;
    flex-shrink: 0;
    margin-left: 1rem;
    width: 2rem;
    text-align: center;
  }

  .faq-item.active .faq-icon {
    transform: rotate(45deg);
  }

  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .faq-answer p {
    font-size: 1.05rem;
    color: var(--gray-600);
    line-height: 1.8;
    padding: 0 2rem 2rem;
  }

  /* Buttons */
  .btn {
    display: inline-block;
    padding: 1.25rem 2.5rem;
    font-size: 1.05rem;
    font-weight: 700;
    text-decoration: none;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    border: 2px solid transparent;
    clip-path: polygon(12px 0, 100% 0, calc(100% - 12px) 100%, 0 100%);
  }

  .btn-primary {
    background: var(--yellow);
    color: var(--black);
    border-color: var(--yellow);
    box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.2);
  }

  .btn-primary:hover {
    background: var(--white);
    color: var(--black);
    border-color: var(--yellow);
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 rgba(246, 245, 16, 0.7), 0 0 25px rgba(246, 245, 16, 0.5);
  }

  .btn-secondary {
    background: transparent;
    color: var(--white);
    border-color: var(--white);
    box-shadow: 4px 4px 0 rgba(255, 255, 255, 0.1);
  }

  .btn-secondary:hover {
    background: var(--white);
    color: var(--black);
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 rgba(255, 255, 255, 0.3);
  }

  .btn-large {
    padding: 1.5rem 3rem;
    font-size: 1.1rem;
  }

  /* Bottom CTA Section */
  .cta-section {
    background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
    padding: 6rem 3rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 50% 50%, rgba(246, 245, 16, 0.1) 0%, transparent 60%);
  }

  .cta-content {
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
  }

  .cta-section h2 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    color: var(--white);
    margin-bottom: 1rem;
    letter-spacing: -2px;
  }

  .cta-section p {
    font-size: 1.3rem;
    color: var(--gray-300);
    margin-bottom: 3rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-section .btn-primary {
    background: var(--yellow);
    color: var(--black);
    border-color: var(--yellow);
  }

  .cta-section .btn-primary:hover {
    background: transparent;
    color: var(--yellow);
    border-color: var(--yellow);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .container {
      padding: 0 1.5rem;
    }

    .hero-content-wrapper {
      padding: 0 1.5rem;
    }

    .hero-cta-buttons {
      flex-direction: column;
    }

    .hero-cta-buttons .btn {
      width: 100%;
    }

    .benefits-grid,
    .services-grid,
    .local-details-grid,
    .neighborhoods-grid {
      grid-template-columns: 1fr;
    }

    .trust-badges {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .cta-buttons .btn {
      width: 100%;
    }
  }
</style>
