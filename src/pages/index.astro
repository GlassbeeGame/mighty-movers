<style>
  .hero {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 2rem;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('/images/mightyimages/LANDING.JPG') center/cover no-repeat;
  }

  .hero-background::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.75) 0%, rgba(0, 0, 0, 0.65) 100%);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 1400px;
    text-align: center;
    padding: 4rem 2rem;
  }

  .hero-logo-svg {
    width: 150px;
    height: 150px;
    margin: 0 auto 2rem;
    display: block;
    filter: drop-shadow(0 4px 12px rgba(246, 245, 16, 0.3));
    animation: fadeInScale 0.8s ease-out;
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .hero-badge {
    display: inline-block;
    background: var(--yellow);
    color: var(--black);
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 2rem;
  }

  .hero h1 {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 900;
    color: var(--white);
    margin-bottom: 1.5rem;
    line-height: 1.1;
    letter-spacing: -2px;
  }

  .hero h1 .highlight {
    color: var(--yellow);
    position: relative;
  }

  .hero-subtitle {
    font-size: clamp(1.1rem, 2vw, 1.4rem);
    color: var(--gray-300);
    max-width: 700px;
    margin: 0 auto 3rem;
    line-height: 1.8;
  }

  .hero-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 4rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1.25rem 2.5rem;
    font-size: 1rem;
    font-weight: 700;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .btn-primary {
    background: var(--yellow);
    color: var(--black);
    border-color: var(--yellow);
  }

  .btn-primary:hover {
    background: transparent;
    color: var(--yellow);
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(246, 245, 16, 0.3);
  }

  .btn-secondary {
    background: transparent;
    color: var(--white);
    border-color: var(--white);
  }

  .btn-secondary:hover {
    background: var(--white);
    color: var(--black);
    transform: translateY(-3px);
  }

  .btn-large {
    padding: 1.5rem 3rem;
    font-size: 1.1rem;
  }

  .phone-icon {
    font-size: 1.2rem;
  }

  .hero-trust {
    display: flex;
    gap: 4rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .trust-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .trust-item strong {
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--yellow);
    line-height: 1;
  }

  .trust-item span {
    font-size: 0.9rem;
    color: var(--gray-400);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 3rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    color: var(--black);
    margin-bottom: 1rem;
    letter-spacing: -1px;
  }

  .section-header p {
    font-size: 1.2rem;
    color: var(--gray-600);
  }

  .features {
    padding: 8rem 0;
    background: var(--gray-50);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 3rem;
  }

  .feature-card {
    background: var(--white);
    padding: 3rem 2rem;
    border-radius: 12px;
    border: 2px solid var(--gray-200);
    transition: all 0.3s ease;
    position: relative;
  }

  .feature-card:hover {
    border-color: var(--yellow);
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .feature-number {
    position: absolute;
    top: -1rem;
    left: 2rem;
    background: var(--yellow);
    color: var(--black);
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 900;
    font-size: 1.2rem;
  }

  .feature-card h3 {
    font-size: 1.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    color: var(--black);
  }

  .feature-card p {
    color: var(--gray-600);
    line-height: 1.8;
  }

  .services-preview {
    padding: 8rem 0;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background: var(--black);
    color: var(--white);
    padding: 3rem 2rem;
    border-radius: 12px;
    transition: all 0.3s ease;
    border: 2px solid var(--black);
  }

  .service-card:hover {
    border-color: var(--yellow);
    transform: translateY(-5px);
    box-shadow: 0 10px 40px rgba(246, 245, 16, 0.2);
  }

  .service-icon {
    font-size: 3rem;
    margin-bottom: 1.5rem;
  }

  .service-card h3 {
    font-size: 1.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    color: var(--white);
  }

  .service-card p {
    color: var(--gray-400);
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .service-link {
    color: var(--yellow);
    font-weight: 700;
    text-decoration: none;
    transition: gap 0.3s ease;
    display: inline-flex;
    align-items: center;
  }

  .service-link:hover {
    gap: 0.5rem;
  }

  .process {
    padding: 8rem 0;
    background: var(--gray-50);
  }

  .process-grid {
    display: grid;
    grid-template-columns: 1fr auto 1fr auto 1fr;
    gap: 2rem;
    align-items: start;
  }

  .process-step {
    text-align: center;
    padding: 2rem;
  }

  .step-number {
    width: 4rem;
    height: 4rem;
    background: var(--yellow);
    color: var(--black);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.8rem;
    font-weight: 900;
    margin: 0 auto 1.5rem;
  }

  .process-step h3 {
    font-size: 1.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    color: var(--black);
  }

  .process-step p {
    color: var(--gray-600);
    line-height: 1.8;
  }

  .process-arrow {
    font-size: 3rem;
    color: var(--gray-300);
    align-self: center;
    padding-top: 4rem;
  }

  .cta-section {
    background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
    padding: 8rem 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 30% 50%, rgba(246, 245, 16, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 50%, rgba(246, 245, 16, 0.08) 0%, transparent 50%);
  }

  .cta-content {
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
  }

  .cta-section h2 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    color: var(--white);
    margin-bottom: 1rem;
    letter-spacing: -1px;
  }

  .cta-section p {
    font-size: 1.3rem;
    color: var(--gray-300);
    margin-bottom: 3rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 1024px) {
    .process-grid {
      grid-template-columns: 1fr;
    }

    .process-arrow {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding: 4rem 1rem;
    }

    .hero-trust {
      gap: 2rem;
    }

    .container {
      padding: 0 1.5rem;
    }

    .features,
    .services-preview,
    .process,
    .cta-section {
      padding: 4rem 0;
    }

    .services-grid,
    .features-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
