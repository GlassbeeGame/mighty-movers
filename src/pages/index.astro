<style>
  /* === HERO SECTION === */
  .hero {
    position: relative;
    min-height: 95vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 2rem;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('/images/mightyimages/LANDING.JPG') center/cover no-repeat;
  }

  .hero-background::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.65) 0%, rgba(0, 0, 0, 0.55) 100%);
  }


  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 1400px;
    text-align: center;
    padding: 4rem 2rem;
  }

  .hero-badge {
    display: inline-block;
    color: var(--yellow);
    padding: 0.5rem 1.5rem;
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    border: 2px solid var(--yellow);
    border-radius: 0;
    clip-path: polygon(8px 0, 100% 0, calc(100% - 8px) 100%, 0 100%);
    animation: fadeIn 0.8s ease-out;
    margin-bottom: 2rem;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .hero-logo-svg {
    width: 200px;
    height: 200px;
    margin: 0 auto 2.5rem;
    display: block;
    filter: drop-shadow(0 8px 20px rgba(246, 245, 16, 0.4));
    animation: fadeInScale 1s ease-out;
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.85) rotate(-5deg);
    }
    to {
      opacity: 1;
      transform: scale(1) rotate(0deg);
    }
  }

  .hero h1 {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 900;
    color: var(--white);
    margin-bottom: 1.5rem;
    line-height: 1.1;
    letter-spacing: -2px;
  }

  .hero h1 .highlight {
    color: var(--yellow);
    position: relative;
  }

  .hero-subtitle {
    font-size: clamp(1.1rem, 2vw, 1.4rem);
    color: var(--gray-300);
    max-width: 700px;
    margin: 0 auto 3rem;
    line-height: 1.8;
  }

  .hero-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 5rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1.25rem 2.5rem;
    font-size: 1rem;
    font-weight: 700;
    text-decoration: none;
    border-radius: 0;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    border: 3px solid transparent;
    position: relative;
    overflow: hidden;
    clip-path: polygon(12px 0, 100% 0, calc(100% - 12px) 100%, 0 100%);
  }

  .btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
    transition: left 0.5s;
  }

  .btn:hover::before {
    left: 100%;
  }

  .btn-arrow {
    font-size: 1.3rem;
    transition: transform 0.3s ease;
  }

  .btn:hover .btn-arrow,
  .btn:hover .service-arrow {
    transform: translateX(5px);
  }

  .btn-primary {
    background: var(--yellow);
    color: var(--black);
    border-color: var(--yellow);
    box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.2);
  }

  .btn-primary:hover {
    background: var(--black);
    color: var(--yellow);
    border-color: var(--yellow);
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 rgba(246, 245, 16, 0.7), 0 0 25px rgba(246, 245, 16, 0.5);
  }

  .btn-secondary {
    background: transparent;
    color: var(--white);
    border-color: var(--white);
    box-shadow: 4px 4px 0 rgba(255, 255, 255, 0.1);
  }

  .btn-secondary:hover {
    background: var(--white);
    color: var(--black);
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 rgba(255, 255, 255, 0.3);
  }

  .btn-large {
    padding: 1.5rem 3rem;
    font-size: 1.1rem;
  }

  .phone-icon {
    font-size: 1.2rem;
  }

  .hero-trust {
    display: flex;
    align-items: center;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
    padding: 2rem;
    background: rgba(0, 0, 0, 0.4);
    border: 2px solid rgba(246, 245, 16, 0.2);
    clip-path: polygon(20px 0, 100% 0, calc(100% - 20px) 100%, 0 100%);
    backdrop-filter: blur(10px);
  }

  .trust-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .trust-number {
    font-size: 2.8rem;
    font-weight: 900;
    color: var(--yellow);
    line-height: 1;
    text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.3);
  }

  .trust-label {
    font-size: 0.8rem;
    color: var(--gray-300);
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 600;
  }

  .trust-divider {
    width: 2px;
    height: 50px;
    background: linear-gradient(to bottom, transparent, var(--yellow), transparent);
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 3rem;
  }

  /* === SHARED SECTION HEADER STYLES === */
