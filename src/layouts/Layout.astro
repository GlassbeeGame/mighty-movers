---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Professional moving services in San Diego" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Mighty Movers</title>
  </head>
  <body>
    <nav>
      <div class="nav-container">
        <a href="/" class="logo-center">
          <svg xmlns="http://www.w3.org/2000/svg"
               viewBox="0 0 500 500"
               class="nav-logo-svg">
            <circle cx="250" cy="250" r="156"
                    fill="none"
                    stroke="#F6F510"
                    stroke-width="5" />
            <polygon points="321,250 285,286 254,254 254,343 321,307"
                     fill="#F6F510" />
            <polygon points="182,250 181,306 249,343 249,254 217,285"
                     fill="#F6F510" />
            <polygon points="347,229 315,213 253,250 286,266"
                     fill="#F6F510" />
            <polygon points="253,173 316,210 347,194 286,155"
                     fill="#F6F510" />
            <polygon points="217,155 154,192 185,211 156,230 221,266 249,249 186,212 250,173"
                     fill="#F6F510" />
          </svg>
          <div class="logo-text-container">
            <span class="logo-text">MIGHTY</span>
            <span class="logo-accent">MOVERS</span>
          </div>
        </a>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/services">Services</a></li>
          <li><a href="/locations">Locations</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact" class="cta-button">Get Quote</a></li>
        </ul>
      </div>
    </nav>
    <main>
      <slot />
    </main>
    <footer>
      <div class="footer-content">
        <div class="footer-top">
          <div class="footer-section footer-brand">
            <div class="footer-logo">
              <span class="logo-text">MIGHTY</span>
              <span class="logo-accent">MOVERS</span>
            </div>
            <p class="footer-tagline">San Diego's Premier Moving Company</p>
            <div class="footer-contact-primary">
              <a href="tel:6195556683" class="phone-link">(619) 555-MOVE</a>
            </div>
          </div>
          <div class="footer-section">
            <h4>Services</h4>
            <ul>
              <li><a href="/services">Residential Moving</a></li>
              <li><a href="/services">Commercial Moving</a></li>
              <li><a href="/services">Packing Services</a></li>
              <li><a href="/services">Storage Solutions</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h4>Company</h4>
            <ul>
              <li><a href="/about">About Us</a></li>
              <li><a href="/locations">Service Areas</a></li>
              <li><a href="/contact">Contact</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h4>Get In Touch</h4>
            <ul class="contact-list">
              <li>San Diego, CA</li>
              <li><a href="mailto:info@mightymovers.com">info@mightymovers.com</a></li>
              <li>Mon-Sat: 7am - 7pm</li>
            </ul>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; {new Date().getFullYear()} Mighty Movers. All rights reserved.</p>
          <div class="footer-legal">
            <a href="#">Privacy Policy</a>
            <a href="#">Terms of Service</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --black: #000000;
    --yellow: #F6F510;
    --white: #ffffff;
    --gray-50: #fafafa;
    --gray-100: #f5f5f5;
    --gray-200: #e5e5e5;
    --gray-300: #d4d4d4;
    --gray-400: #a3a3a3;
    --gray-500: #737373;
    --gray-600: #525252;
    --gray-700: #404040;
    --gray-800: #262626;
    --gray-900: #171717;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    color: var(--gray-900);
    background: var(--white);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  nav {
    background: var(--black);
    padding: 1.5rem 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    border-bottom: 3px solid var(--yellow);
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 3rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
  }

  .logo-center {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .logo-center:hover {
    transform: translateX(-50%) translateY(-2px);
  }

  .nav-logo-svg {
    width: 60px;
    height: 60px;
  }

  .logo-text-container {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
  }

  .logo-text {
    color: var(--white);
    font-size: 1.2rem;
    font-weight: 900;
    letter-spacing: -0.5px;
  }

  .logo-accent {
    color: var(--yellow);
    font-size: 1.2rem;
    font-weight: 900;
    letter-spacing: -0.5px;
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 3rem;
    align-items: center;
  }

  .nav-links a {
    color: var(--white);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-links a:not(.cta-button):hover {
    color: var(--yellow);
  }

  .nav-links a:not(.cta-button)::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--yellow);
    transition: width 0.3s ease;
  }

  .nav-links a:not(.cta-button):hover::after {
    width: 100%;
  }

  .cta-button {
    background: var(--black);
    color: var(--white);
    padding: 0.75rem 1.75rem;
    border-radius: 6px;
    font-weight: 700;
    transition: all 0.3s ease;
    border: 2px solid var(--white);
  }

  .cta-button:hover {
    background: var(--yellow);
    color: var(--black);
    border-color: var(--yellow);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(246, 245, 16, 0.3);
  }

  main {
    min-height: calc(100vh - 200px);
  }

  footer {
    background: var(--black);
    color: var(--white);
    margin-top: 6rem;
  }

  .footer-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 4rem 3rem 2rem;
  }

  .footer-top {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--gray-800);
  }

  .footer-brand {
    max-width: 350px;
  }

  .footer-logo {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .footer-logo .logo-text {
    font-size: 1.75rem;
  }

  .footer-logo .logo-accent {
    font-size: 1.75rem;
  }

  .footer-tagline {
    color: var(--gray-400);
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .footer-contact-primary {
    margin-top: 1.5rem;
  }

  .phone-link {
    display: inline-block;
    color: var(--yellow);
    font-size: 1.5rem;
    font-weight: 700;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .phone-link:hover {
    transform: translateX(5px);
  }

  .footer-section h4 {
    color: var(--white);
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .footer-section ul {
    list-style: none;
  }

  .footer-section ul li {
    margin-bottom: 0.75rem;
  }

  .footer-section a {
    color: var(--gray-400);
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.95rem;
  }

  .footer-section a:hover {
    color: var(--yellow);
  }

  .contact-list li {
    color: var(--gray-400);
    font-size: 0.95rem;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    color: var(--gray-500);
    font-size: 0.9rem;
  }

  .footer-legal {
    display: flex;
    gap: 2rem;
  }

  .footer-legal a {
    color: var(--gray-500);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-legal a:hover {
    color: var(--yellow);
  }

  @media (max-width: 1024px) {
    .footer-top {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }
  }

  @media (max-width: 968px) {
    .nav-container {
      flex-direction: column;
      gap: 1.5rem;
      padding: 0 1.5rem;
    }

    .logo-center {
      position: static;
      transform: none;
    }

    .logo-center:hover {
      transform: translateY(-2px);
    }

    .nav-links {
      width: 100%;
      justify-content: center;
    }
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 0 1.5rem;
    }

    .nav-links {
      flex-wrap: wrap;
      gap: 1.5rem;
      justify-content: center;
    }

    .footer-content {
      padding: 3rem 1.5rem 1.5rem;
    }

    .footer-top {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .footer-legal {
      flex-direction: column;
      gap: 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .nav-links {
      gap: 1rem;
      font-size: 0.9rem;
    }

    .logo-text,
    .logo-accent {
      font-size: 1rem;
    }

    .nav-logo-svg {
      width: 50px;
      height: 50px;
    }
  }
</style>
