<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --black: #000000;
    --yellow: #F6F510;
    --white: #ffffff;
    --gray-50: #fafafa;
    --gray-100: #f5f5f5;
    --gray-200: #e5e5e5;
    --gray-300: #d4d4d4;
    --gray-400: #a3a3a3;
    --gray-500: #737373;
    --gray-600: #525252;
    --gray-700: #404040;
    --gray-800: #262626;
    --gray-900: #171717;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    color: var(--gray-900);
    background: var(--white);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  nav {
    background: var(--black);
    padding: 1.5rem 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    border-bottom: 3px solid var(--yellow);
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 3rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .brand {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .brand:hover {
    transform: translateY(-2px);
  }

  .brand-text {
    color: var(--white);
    font-size: 1.5rem;
    font-weight: 900;
    letter-spacing: -0.5px;
  }

  .brand-accent {
    color: var(--yellow);
    font-size: 1.5rem;
    font-weight: 900;
    letter-spacing: -0.5px;
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 3rem;
    align-items: center;
  }

  .nav-links a {
    color: var(--white);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-links a:not(.cta-button):hover {
    color: var(--yellow);
  }

  .nav-links a:not(.cta-button)::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--yellow);
    transition: width 0.3s ease;
  }

  .nav-links a:not(.cta-button):hover::after {
    width: 100%;
  }

  .cta-button {
    background: var(--yellow);
    color: var(--black) !important;
    padding: 0.75rem 1.75rem;
    border-radius: 0;
    font-weight: 700;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    border: 2px solid var(--yellow);
    box-shadow: 3px 3px 0 rgba(0, 0, 0, 0.3);
    clip-path: polygon(8px 0, 100% 0, calc(100% - 8px) 100%, 0 100%);
  }

  .cta-button:hover {
    background: var(--black);
    color: var(--yellow) !important;
    border-color: var(--yellow);
    transform: translate(-2px, -2px);
    box-shadow: 5px 5px 0 rgba(246, 245, 16, 0.6), 0 0 20px rgba(246, 245, 16, 0.4);
  }

  main {
    min-height: calc(100vh - 200px);
  }

  footer {
    background: linear-gradient(180deg, #0a0a0a 0%, var(--black) 100%);
    color: var(--white);
    margin-top: 6rem;
    position: relative;
  }

  footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--yellow), transparent);
  }

  .footer-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 5rem 3rem 2rem;
  }

  .footer-top {
    display: grid;
    grid-template-columns: 2fr 1.2fr 1.2fr 1.5fr;
    gap: 4rem;
    padding-bottom: 3rem;
    border-bottom: 2px solid rgba(246, 245, 16, 0.1);
  }

  .footer-brand {
    max-width: 400px;
  }

  .footer-logo {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .footer-logo .logo-text {
    font-size: 2rem;
    font-weight: 900;
    color: var(--white);
  }

  .footer-logo .logo-accent {
    font-size: 2rem;
    font-weight: 900;
    color: var(--yellow);
  }

  .footer-tagline {
    color: var(--yellow);
    margin-bottom: 1rem;
    font-size: 1rem;
    font-style: italic;
    font-weight: 500;
  }

  .footer-description {
    color: var(--gray-400);
    line-height: 1.7;
    font-size: 0.95rem;
    margin-bottom: 1.5rem;
  }

  .footer-contact-primary {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .phone-link,
  .email-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--white);
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    padding: 0.5rem 0;
  }

  .phone-link {
    color: var(--yellow);
    font-size: 1.3rem;
    font-weight: 700;
  }

  .phone-link:hover,
  .email-link:hover {
    transform: translateX(5px);
    color: var(--yellow);
  }

  .phone-icon-footer,
  .email-icon {
    font-size: 1.2rem;
  }

  .footer-section h4 {
    color: var(--white);
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    position: relative;
    padding-bottom: 0.75rem;
  }

  .footer-section h4::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 40px;
    height: 2px;
    background: var(--yellow);
  }

  .footer-section ul {
    list-style: none;
  }

  .footer-section ul li {
    margin-bottom: 0.75rem;
  }

  .footer-section a {
    color: var(--gray-400);
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 0.95rem;
    display: inline-block;
  }

  .footer-section a:hover {
    color: var(--yellow);
    transform: translateX(3px);
  }

  .contact-list li {
    color: var(--gray-400);
    font-size: 0.95rem;
    line-height: 1.8;
  }

  .contact-list strong {
    color: var(--white);
    margin-right: 0.5rem;
  }

  .availability-note {
    color: var(--yellow) !important;
    font-weight: 600;
    margin-top: 0.5rem;
  }

  .service-info-title {
    margin-top: 2rem;
  }

  .service-info-text {
    color: var(--gray-400);
    font-size: 0.9rem;
  }

  .footer-middle {
    padding: 2rem 0;
    border-bottom: 1px solid var(--gray-800);
    text-align: center;
  }

  .footer-address {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: rgba(246, 245, 16, 0.05);
    border: 2px solid rgba(246, 245, 16, 0.2);
    clip-path: polygon(12px 0, 100% 0, calc(100% - 12px) 100%, 0 100%);
    transition: all 0.3s ease;
  }

  .footer-address:hover {
    background: rgba(246, 245, 16, 0.1);
    border-color: rgba(246, 245, 16, 0.4);
    transform: translateY(-2px);
  }

  .location-icon {
    font-size: 1.3rem;
  }

  .footer-address a {
    color: var(--white);
    text-decoration: none;
    font-size: 1.05rem;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .footer-address a:hover {
    color: var(--yellow);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    color: var(--gray-500);
    font-size: 0.9rem;
  }

  .footer-bottom-right {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.75rem;
  }

  .footer-social {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .footer-social .social-link {
    color: var(--gray-500);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .footer-social .social-link:hover {
    color: var(--yellow);
  }

  .footer-legal {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .footer-legal .separator {
    color: var(--gray-700);
  }

  .footer-legal a {
    color: var(--gray-500);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-legal a:hover {
    color: var(--yellow);
  }

  @media (max-width: 1024px) {
    .footer-top {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }
  }

  @media (max-width: 968px) {
    .nav-container {
      flex-direction: column;
      gap: 1.5rem;
      padding: 1.5rem;
    }

    .nav-links {
      width: 100%;
      justify-content: center;
      flex-wrap: wrap;
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 1rem 1.5rem;
    }

    .nav-links {
      gap: 1rem;
    }

    .footer-content {
      padding: 3rem 1.5rem 1.5rem;
    }

    .footer-top {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .footer-brand {
      max-width: 100%;
    }

    .footer-middle {
      padding: 1.5rem 0;
    }

    .footer-address {
      padding: 0.75rem 1.5rem;
      flex-direction: column;
      text-align: center;
    }

    .footer-address a {
      font-size: 0.95rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .footer-legal {
      gap: 0.5rem;
    }

    .footer-bottom-right {
      align-items: center;
    }

    .footer-social {
      flex-wrap: wrap;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .nav-links {
      font-size: 0.9rem;
    }

    .brand-text,
    .brand-accent {
      font-size: 1.2rem;
    }
  }
</style>
